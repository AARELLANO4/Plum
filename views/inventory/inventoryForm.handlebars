<div class = "regForm">
    <h2>Add Inventory: </h2><br>
    <h2>{{err}}</h2>
    <div id ="regErrors">

    </div>
    <form action="/product/AddInventory" method = "POST" enctype="multipart/form-data">
                    <div>           
                        <label for="prodName">Product Name: </label>
                        <input type="text" id="prodName" name="prodName" value="{{prodName}}"><br><br>
                    </div>
                    <div class = "formError"><p>{{nameErr}}</p></div><br><br>

                    <div>
                        <label for="prodPrice">Product Price:</label>
                        <input type="number" id="prodPrice" name="prodPrice" step="0.01" value="{{prodPrice}}"><br>
                    </div>
                    <div class = "formError"><p>{{priceErr}}</p></div><br><br>

                    <div>
                        <label for="prodDetails">Product Details</label>
                        <input type="text" id="prodDetails" name="prodDetails" value="{{prodDetails}}"><br>   
                    </div>
                    <div class = "formError"><p>{{detailErr}}</p></div><br><br>
                    <div>
                        <label for="prodCategory">Product Category:</label>
                        <select id="prodCategory" name="prodCategory">
                            <option value="Books">Books</option>
                            <option value="Video Games">Video Games</option>
                            <option value="TV Shows">TV Shows and Movies</option>
                            <option value="Smart Home">Smart Home</option> 
                            <option value="Electronics">Electronics</option>
                            <option value="Health">Health and Beauty</option>
                            <option value="Stationery">Stationery</option>
                            <option value="Home">Home and Garden</option>       
                        </select><br><br>
                    </div>                     
                    <div>
                        <label for="prodQuantity">Quantity:</label>
                        <input type="number" id = "prodQuantity" name="prodQuantity" value = {{prodQuantity}} ><br><br>
                        <div class = "formError"><p>{{quantityErr}}</p></div><br><br>
                    </div> 
                    <div>                        
                        <label for="prodBestSeller">Best Seller?</label>
                        <select id="prodBestSeller" name="prodBestSeller">
                            <option value="true">Yes</option>
                            <option value="false">No</option>    
                        </select><br><br>
                    </div> 
                    <div>                        
                        <label>Product Photo</label>
                        <input type="file" name="prodPic" id="prodPic">{{err}}<br><br>
                    </div> 
                    <div class = "formError"><p>{{picErr}}</p></div><br><br>
                    <input type = "submit" value = "Add Inventory">
                </form>

</div>