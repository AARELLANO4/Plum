    <div class = "products">
        {{#each products}}
            <div class = "item">
                <img id = "productImage" max-height="300px" src="/uploads/{{this.prodPic}}" alt="productImage">
                <p class = "prodName">{{this.prodName}}</p>
                <p class = "prodDetails">{{this.prodDetails}}</p>
                <p class = "prodPrice">${{this.prodPrice}}</p>
                <p class = "prodCategory"><a href="">{{this.prodCategory}}</a></p>
            </div>
        {{/each}}
