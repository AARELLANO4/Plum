<div class = "logForm">
    <h2>Sign-In</h2><br>
    <div id="loginErrors">
        {{#each errors}}
            <p>{{this}}</p>
        {{/each}}

    </div>
    <form method = "POST" action="/user/login">

                    <div>
                        <label for="email">Email:</label><br>
                        <input type="text" name="email" value = {{email}}><br>
                        <div class = "formError"><p>{{emailErr}}</p></div><br><br>
                        
                    </div>
                    <div>
                        <label for="password">Password:</label><br>
                        <input type="password" name="password" id="password" placeholder="At least 8 characters"><br>
                        <div class = "formError"><p>{{passwordErr}}</p></div><br><br>
                        
                    </div>    
                    <input type = "submit" value = "Sign in!">                 

    </form>

    <p><a href="">Forgot password.</a></p>
    <p>New to Plum? <a href="/registration">Create an account!</a></p>
</div>