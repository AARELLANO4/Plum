
<div class = "regMessage"><p>{{success}}</p></div>

<div class = "promo"> 
    <img id = "promoImg" src="/img/promoProduct.png" alt="Promo Image">
</div>


<div id=productBody>
    <h2 id=productHead>Product Categories</h2>

        <div class = "grid-category">

            {{#each category}}
                <div class = "item">
                    <h3>{{this.title}}</h3> 
                    <img id = "catImg" src="{{this.image}}" alt="Category Images">
                    <p class ="HMCatLink"><a href="">{{this.link}}</a></p>
                </div>
            {{/each}}
            
        </div>

    <h2 id=bestSellerHead>Best Sellers</h2>

        <div class = "grid-bestSeller">

            {{#each bestSellers}}
            {{#if this.prodBestSeller}}
                <div class = "item">    
                    <img id = "catImg" src="/uploads/{{this.prodPic}}" alt="Category Images">
                    <h3>${{this.prodPrice}}</h3>
                    <p class="HMBsDesc">{{this.prodName}}</p>
            </div>    
            {{/if}}
            {{/each}}

            
        </div>
</div>